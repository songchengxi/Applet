/**index.wxss**/

.container {
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 250px;
  font-size: 15px;
  text-align: center;
}

.item_letter {
  display: flex;
  background-color: #f8f8f8;
  height: 30px;
  padding-left: 10px;
  align-items: center;
}

.jump_app {
  display: inline;
}

.appinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-top: 10rpx;
  border-radius: 50%;
}
