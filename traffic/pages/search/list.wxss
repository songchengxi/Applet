.flex-wrp {
  display: flex;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.search {
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #4fc3f7;
}

.search-left {
  width: 85%; 
  background: #03a9f4;
  text-align: left;
  border-radius: 13rpx;
}

.search-left input {
  width: 85%; 
  display: inline-block;
  font-size: 26rpx;
}

.search-placeholder {
  color: #fff;
  line-height: 30rpx;
}

.search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}

.search-right {
  width: 15%; 
  color: #fff; 
  padding: 15rpx; 
}

button::after {
  border: 0px solid rgba(0, 0, 0, 0.2);
}

/*列表信息*/
.container {
  padding: 0;
}

.scroll-view-item {
  padding: 1rem 5px;
  padding-bottom: 3px;
  padding-top: 7px;
  display: flex;
  border-bottom: 1px solid #e6e8eb;
}

.detail {
  line-height: 1.25em;
  flex: 2;
  padding: 0 10px;
  position: relative;
}

.item-name {
  top: 0;
}

.tips {
  font-size: 0.85rem;
  bottom: 0;
  color: #b2b2b2;
}

.item-info {
  float: left;
}

.category {
  float: right;
}

/*  加载更多   */
.bottom {
  color: #b2b2b2;
}
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}